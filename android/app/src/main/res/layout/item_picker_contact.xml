<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:id="@+id/contact_container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/audio_background"
        android:backgroundTint="#FF4081"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:id="@+id/contact_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="15sp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/contact_nm"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/contact_container" />
    <TextView
        android:id="@+id/contact_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="30dp"
        android:maxLines="1"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/contact_nm"
        app:layout_constraintStart_toEndOf="@id/contact_container" />
    <RadioButton
        android:id="@+id/contact_selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:buttonTint="#448AFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>