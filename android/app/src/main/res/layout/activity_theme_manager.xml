<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3A4B58">

    <com.twohearts.chat.views.blur.BlurLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_top_bar_height"
        android:id="@+id/chat_top_bar"
        app:blk_blurRadius="24"
        app:blk_fps="0"
        app:layout_constraintTop_toTopOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_img_wrapped"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            />
    </com.twohearts.chat.views.blur.BlurLayout>
    <LinearLayout
        android:id="@+id/chat_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/chat_top_bar">
    <ImageView
        android:id="@+id/chat_foreground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/background_hd1"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />
    </LinearLayout>
    <com.twohearts.chat.views.blur.BlurLayout
        android:id="@+id/chat_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_top_bar_height"
        android:background="#2D2D2D"
        app:blk_fps="0"
        app:blk_blurRadius="24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/chat_smile"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorWhite"
            android:background="@drawable/ic_emoji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chat_smile"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:text="Write you message"
            android:textColor="#C0BFC7"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@id/record_icon"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-56dp"
            android:background="@drawable/ic_attach_file"
            android:backgroundTint="@color/colorWhite" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/record_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_send" />
    </RelativeLayout>
    </com.twohearts.chat.views.blur.BlurLayout>

    <LinearLayout
        android:id="@+id/theme_select_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/chat_bottom_bar"
        >
        <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:padding="0dp"
            android:id="@+id/search_images"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:hint="@string/search_images"
            android:textColorHint="@color/gray_light"
            android:textSize="14sp"
            android:backgroundTint="@color/fui_transparent"
            android:inputType="text" />
        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/search_indicator"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:indeterminateTint="@color/colorWhite"
            />
        <RadioGroup
            android:id="@+id/background_group"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:scaleX="0.8"
                android:tag="0"
                android:id="@+id/chat_image_mode"
                android:scaleY="0.8"
                android:buttonTint="@color/colorWhite"
                android:text="@string/image"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:id="@+id/chat_color_mode"
                android:scaleX="0.8"
                android:tag="1"
                android:scaleY="0.8"
                android:buttonTint="@color/colorWhite"
                android:text="@string/color"/>

            <RadioButton
                android:id="@+id/chat_local_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorWhite"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:tag="2"
                android:text="@string/local"
                android:textColor="@color/colorWhite" />


        </RadioGroup>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_background_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/theme_select_bar"
        />
    <LinearLayout
        android:id="@+id/pattern_box"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat_background_list"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/pattern_checkbox"
            android:layout_width="wrap_content"
            android:layout_marginStart="-2dp"
            android:buttonTint="@color/colorWhite"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="@string/pattern"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pattern_list"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/pattern_box"
        />
    <LinearLayout
        android:id="@+id/theme_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/pattern_list"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/bar"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bar_group"
            android:layout_marginStart="20dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:scaleX="0.8"
                android:tag="0"
                android:scaleY="0.8"
                android:id="@+id/blur_mode"
                android:buttonTint="@color/colorWhite"
                android:text="@string/blur"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:id="@+id/color_mode2"
                android:tag="1"
                android:buttonTint="@color/colorWhite"
                android:text="@string/color"/>
        </RadioGroup>

    </LinearLayout>
    <TextView
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/blur_node"
        android:textColor="#9C9C9C"
        android:text="@string/background"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/theme_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"/>

    <LinearLayout
        android:id="@+id/theme_accent_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/blur_node"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="@string/accent_color"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accents_list"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/theme_accent_bar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>