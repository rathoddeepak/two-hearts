<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:id="@+id/audio_art_container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/audio_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/audio_control"
            android:layout_width="30dp"
            android:backgroundTint="#ffffff"
            android:background="@drawable/audio"
            android:layout_height="30dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/audio_name"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/audio_art_container" />
    <TextView
        android:id="@+id/audio_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="10dp"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/audio_name"
        app:layout_constraintStart_toEndOf="@id/audio_art_container" />

    <RadioButton
        android:id="@+id/audio_selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:buttonTint="#FF5722"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>