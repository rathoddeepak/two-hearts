<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_theme_item"
    android:layout_width="135dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="200dp">
    <com.twohearts.chat.views.RoundedImageCompactView
        android:id="@+id/theme_item"
        android:background="@drawable/rounded_light"
        android:layout_width="match_parent"
        app:cornerRadius="5dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="40dp"
        android:id="@+id/theme_checkbox"
        android:background="@drawable/circle"
        android:backgroundTint="@color/black50"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="40dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/middle_button"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorWhite"
            android:background="@drawable/download"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:id="@+id/theme_progress"
        android:visibility="gone"
        android:background="@drawable/circle"
        android:backgroundTint="@color/black50"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="40dp">
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/theme_indicator"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white"
        />
    </RelativeLayout>
</FrameLayout>